<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		{# CSS links #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/main.css') }}">
			<link rel="stylesheet" href="{{ asset('css/hamburger.css') }}">
		{% endblock %}
		{% block additional_css %}{% endblock %}

		{# JavaScript links #}
		{% block javascripts %}
			<script src="{{ asset('js/main.js') }}"></script>
		{% endblock %}

	</head>
	<body>
		<header id="header">
			<div id="wrapper" data-theme="light">
				<nav id="navbar">
					{# Hamburger  #}
					<button class="hamburger hamburger-animation" type="button" onclick="toggleMenu()">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</button>
					{# Nav-Links #}
					<div id="navigation" class="nav-links">
						<ul>
							<li>
								<a href="{{path('app_home') }}">Accueil</a>
							</li>
							<li>
								<a href="{{path('app_formation') }}">Formation</a>
							</li>
							<li>
								<a href="{{path('app_session') }}">Sessions</a>
							</li>
							{% if app.user %}
								<li>
									<a href="{{path('app_stagiaire') }}">Stagiaires</a>
								</li>
							{% endif %}
							<li>
								<a href="{{path('app_module') }}">Modules</a>
							</li>
							<li>
								<a href="{{path('app_categorie') }}">Catégorie</a>
							</li>
							{% if app.user %}
								<li>
									<a href="{{path('app_logout') }}">Déconnexion</a>
								</li>
							{% else %}
								<li>
									<a href="{{path('app_login') }}">Connexion</a>
								</li>
								<li>
									<a href="{{path('app_register') }}">Inscription</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</nav>
			</div>
		</header>
		{% block body %}{% endblock %}
	</body>
</html></div></body></html>
