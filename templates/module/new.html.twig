{% extends 'base.html.twig' %}

{% block title %}

	{% if isNew %}

		Ajouter un module

	{% else %}

		Editer un module

	{% endif %}

	{% block additional_css %}
		<link rel="stylesheet" href="{{ asset('css/edit-section.css') }}">
	{% endblock %}

{% endblock %}

{% block body %}

	<h1>Module</h1>

	<div class="section">

		<a class="btn-return" href="{{ path('app_module') }}"><i class="fa-solid fa-caret-left" style="color: #000000; font-size: 40px;"></i>Retour</a>

		{% if isNew %}

			<h2>Ajouter un module</h2>

		{% else %}

			<h2>Modifier ou supprimer le module</h2>

		{% endif %}

		{{ form_start(formAddModule) }}
			{{ form_row(formAddModule.nom) }}
			{{ form_row(formAddModule.categorie) }}
		{{ form_row(formAddModule.Valider) }}

		{% if isNew == false %}

			<a class="btn-return" href="{{ path('infos_module', {'id' : module}) }}">Annuler</a>
			<a class="confirm-delete btn btn-delete" href="{{ path('delete_module', {'id' : module}) }}">Supprimer le module</a>

		{% else %}

			<a class="btn-return" href="{{ path('app_module')}}">Annuler</a>

		{% endif %}

		{{ form_end(formAddModule) }}

	</div>

{% endblock %}
