{% extends 'base.html.twig' %}

{% block title %}

	Ajouter une catégorie

{% endblock %}

{% block additional_css %}
	<link rel="stylesheet" href="{{ asset('css/edit-section.css') }}">
{% endblock %}

{% block body %}

	<h1>Catégorie</h1>

	<div class="section">

		{% if isNew %}

			<a class="btn-return" href="{{ path('app_categorie') }}"><i class="fa-solid fa-caret-left" style="color: #000000; font-size: 40px;"></i>Retour</a>
			<h2>Ajouter une catégorie</h2>

		{% else %}

			<a class="btn-return" href="{{ path('app_categorie') }}"><i class="fa-solid fa-caret-left" style="color: #000000; font-size: 40px;"></i>Retour</a>
			<h2>Modifier / Supprimer une catégorie</h2>

		{% endif %}

		{# Formulaire #}
		{{ form_start(formAddCategorie) }}

		{{ form_row(formAddCategorie.nom) }}
		{{ form_row(formAddCategorie.Valider) }}

		{% if isNew == false %}

			<a class="btn-return" href="{{ path('app_categorie') }}">Annuler</a>
			<a class="confirm-delete btn btn-delete" href="{{ path('delete_categorie', {'id' : categorie}) }}">Supprimer</a>

		{% endif %}

		{{ form_end(formAddCategorie) }}

	</div>

{% endblock %}
